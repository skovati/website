#!/bin/bash

RED='\033[1;31m'
GRE='\033[0;32m'
YEL='\033[1;33m'
BLU='\033[0;34m'
MAG='\033[0;35m'
CYA='\033[0;36m'
NC='\033[0;37m'

echo -e "${RED}
Skovati Network Status Report----------
${NC}"
date

echo -e "${YEL}
Node-----------------------------------
${NC}"
/home/skovati/code/docker/nginx/status/screenfetch-dev
echo -e "${GRE}
Network--------------------------------
${NC}"
vnstat -i br0

echo -e "${BLU}
CPU/Mem--------------------------------
${NC}"
iostat -ch | tail -n 4 | head -n 2

echo "
"
free -m

echo -e "${MAG}
Disks----------------------------------
${NC}"
iostat -h -m -d | tail -n 3 | head -n 2
echo "
"
lsblk

echo "
"
df -h --local -x tmpfs -x devtmpfs

echo -e "${CYA}
Docker---------------------------------
${NC}"
docker stats --no-stream

echo -e "${RED}
Nas------------------------------------
${NC}"
ssh nas screenfetch
echo -e "${GRE}
Network--------------------------------
${NC}"
ssh nas vnstat -i eno1

echo "
"
ssh nas vnstat -i wg0

echo -e "${BLU}
Cpu/Mem--------------------------------
${NC}"
ssh nas iostat -hc | tail -n 5 | head -n 3

echo "
"
ssh nas free -m

echo -e "${MAG}
Disks----------------------------------
${NC}"
ssh nas iostat -h -m -d | tail -n 7 | head -n 4

echo "
"
ssh nas lsblk

echo "
"
ssh nas df -h --local -x tmpfs -x devtmpfs

echo -e "${CYA}
Docker---------------------------------
${NC}"
ssh nas docker stats --no-stream

echo -e "${RED}
Deluge---------------------------------
${NC}"
bash /home/skovati/code/docker/nginx/status/deluge_stats
